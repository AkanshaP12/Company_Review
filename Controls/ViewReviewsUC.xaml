<UserControl x:Class="Company_Review.Controls.ViewReviewsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Company_Review.Controls"
             xmlns:resX ="clr-namespace:Company_Review.Properties"
             FlowDirection="{Binding Mode=OneTime,Source={x:Static resX:Resources.flowDirection}}"
             mc:Ignorable="d" 
             >
  <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*">

                </ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"  Text="{x:Static resX:Resources.txt_apptitle}" FontSize="18" Margin="20,0,0,0"></TextBlock>
            <ComboBox Grid.Column="1" x:Name="Cbx_lang" Width="60" Height="20"  SelectionChanged="Cbx_lang_SelectionChanged" Margin="5,5,5,5"></ComboBox>
        </Grid>


        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="10,10,10,120" Orientation="Vertical" Grid.Column="0" >
                <TextBox x:Name="Tbx_filter" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap"  VerticalAlignment="Top" Width="160" ToolTip="Search Company Name" TextChanged="Tbx_filter_TextChanged"/>
                
                <ListBox x:Name="Lbx_companies" VerticalAlignment="Top" Width="160" FontSize="20" Height="200" Margin="0,40,0,0" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionChanged="Lbx_companies_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40">
                                    </ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding companyOverview.logoPath}" Width="25" Height="25"/>
                                <TextBlock Grid.Column="1" FontSize="15" TextWrapping="Wrap" Margin="5,0,0,0">
                                    <Run Text="{Binding companyOverview.name}"/>
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            <StackPanel  Orientation="Vertical" Grid.Column="1" x:Name="Stp_View_Reviews_Filters" Visibility="Collapsed" Margin="10,10,10,120">
                <StackPanel Orientation="Vertical" Margin="10,20,5,20">
                    <TextBlock Text="Department" FontSize="15"/>
                    <ComboBox></ComboBox>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="10,20,5,20">

                    <TextBlock Text="Employment Status" FontSize="15"/>
                    <ComboBox>
                        <ComboBoxItem Content="Full Time" IsSelected="True">
                        </ComboBoxItem>
                        <ComboBoxItem Content="Part Time" >
                        </ComboBoxItem>
                        <ComboBoxItem Content="Student Work">
                        </ComboBoxItem>
                        <ComboBoxItem Content="Intern">
                        </ComboBoxItem>
                        <ComboBoxItem Content="Freelancer">
                        </ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="10,20,5,20">
                    <TextBlock Text="Location" FontSize="15"/>
                    <ComboBox>
                    </ComboBox>
                </StackPanel>

            </StackPanel>
            <!-- Selected Company code starts -->

            <Grid Grid.Column="2" x:Name="Grd_Company_Selected" Visibility="Collapsed" DataContext="{Binding ElementName=Lbx_companies, Path=SelectedItem}" Margin="10,10,0,0" VerticalAlignment="Top" Height="Auto" Grid.ColumnSpan="2">
                <ScrollViewer>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"></RowDefinition>
                            <RowDefinition Height="30"></RowDefinition>
                            <RowDefinition Height="100"></RowDefinition>
                            <RowDefinition Height="30"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Button x:Name="Btn_Back_To_All_Companies" Content="Back" Click="Btn_Back_To_All_Companies_Click"  Width="45" Height="20" HorizontalAlignment="Left" Margin="5,0,0,0" Grid.Row="0"></Button>
                        <StackPanel Orientation="Horizontal" x:Name="Sp_selectedCompany" Grid.Row="1" Margin="5,5,5,0">
                            <TextBlock Text="{Binding companyOverview.name, StringFormat='{}{0} Reviews'}" FontSize="20"></TextBlock>
                        </StackPanel>
                        <Grid Grid.Row="2" VerticalAlignment="Top" Margin="5,5,5,0">
                            <Border Width="550" Height="90" BorderThickness="2" BorderBrush="Black" HorizontalAlignment="Left">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{Binding companyOverview.logoPath}" Width="40" Margin="20,0,0,0"/>
                                        <TextBlock Text="{Binding companyOverview.name}" FontSize="20" Margin="30,0,0,0" VerticalAlignment="Center"></TextBlock>
                                        <TextBlock Text="{Binding companyOverview.avgRating, StringFormat='Rating {0}/5'}" FontSize="20" Margin="300,0,0,10"></TextBlock>
                                    </StackPanel>

                                    <TextBlock Text="{Binding companyOverview.noOfReviews, StringFormat='{}{0} reviews'}" FontSize="15" Margin="20,0,0,0"></TextBlock>
                                    <TextBlock Text="{Binding companyOverview.wouldRecommended, StringFormat='{}{0}% Would recommend to a friend'}" FontSize="15" Margin="20,0,0,10">
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="5,5,5,0">
                            <TextBlock Text="Reviews" FontSize="20"></TextBlock>
                        </StackPanel>

                        <Grid HorizontalAlignment="Left" Margin="5,5,5,0" Grid.Row="4">
                            <ItemsControl Name="Itc_Selected_Company_Reviews" ItemsSource="{Binding reviews}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="550" BorderThickness="2" BorderBrush="Black" Margin="0,5,0,0">
                                            <Grid Margin="0,5,0,5">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="*"></RowDefinition>
                                                    <RowDefinition Height="Auto"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*">
                                                        </ColumnDefinition>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding reviewTitle}" Grid.Column="0" Margin="10,0,10,0" FontSize="20" FontWeight="Bold" Foreground="#FF194BA2"></TextBlock>
                                                    <TextBlock Text="{Binding rating,StringFormat='Rating {0}/5'}" Grid.Column="1" Margin="10,0,20,0" FontSize="20"></TextBlock>
                                                </Grid>
                                                <Grid Grid.Row="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" FontSize="13" Margin="10,0,0,0" FontStyle="Italic" Foreground="#FF958E8E">
                                                        <TextBlock.Text>
                                                            <MultiBinding StringFormat="{}{0} {1} Employee - ">
                                                                <Binding Path="jobStatus"></Binding>
                                                                <Binding Path="employmentStatus"></Binding>
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>
                                                    <TextBlock Text="{Binding jobLocation, StringFormat='at {0}'}" FontSize="13" Margin="0,0,10,0" FontStyle="Italic" Grid.Column="1" Foreground="#FF958E8E"></TextBlock>
                                                </Grid>
                                                <Grid Grid.Row="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="{Binding jobDesignation, StringFormat='As {0}'}" Grid.Column="0" FontSize="13" FontStyle="Italic" Margin="10,0,0,0" Foreground="#FF958E8E"></TextBlock>
                                                    <TextBlock Text="{Binding jobDepartment, StringFormat=' in {0} department'}" FontStyle="Italic" Grid.Column="1" FontSize="13" Margin="0,0,10,0" Foreground="#FF958E8E" ForceCursor="True"/>
                                                </Grid>
                                                <Grid Grid.Row="3">
                                                    <TextBlock Text="{Binding skillsAsString}" FontSize="15" Margin="10,0,10,0"></TextBlock>
                                                </Grid>
                                                <Grid Grid.Row="4">
                                                    <TextBlock Text="Pros" FontSize="15" Margin="10,0,10,0" Foreground="#FFA0F387" FontWeight="Bold"></TextBlock>
                                                </Grid>
                                                <Grid Grid.Row="5">
                                                    <ItemsControl ItemsSource="{Binding pros.pros}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding comment, StringFormat='• {0}'}" FontSize="15" Margin="25,0,10,0"></TextBlock>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>

                                                </Grid>
                                                <Grid Grid.Row="6">
                                                    <TextBlock Text="Cons" FontSize="15" Margin="10,0,10,0" Foreground="#FFF17F65" FontWeight="Bold"></TextBlock>
                                                </Grid>
                                                <Grid Grid.Row="7">
                                                    <ItemsControl ItemsSource="{Binding cons.cons}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <TextBlock Text="{Binding comment, StringFormat='• {0}'}" FontSize="15" Margin="25,0,10,0"></TextBlock>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>

                                                </Grid>

                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Grid>

            <!-- Selected Company code ends -->

            <!-- All Companies Code starts-->
            <Grid Grid.Column="2" x:Name="Grd_All_Companies" Margin="5,10,10,10" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60">
                    </RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Visibility="Visible" Grid.Row="0" >
                    <Button Name="Btn_AddReview" Margin="530,0,0,0" Width="120" Height="40"  Content="Add Review" FontSize="20" Click="Btn_AddReview_Click">

                    </Button>
                </StackPanel>
                <!--<Grid Margin="0,10,0,10" Grid.Row="1">
                    <Border Width="700" Height="90" BorderThickness="2" BorderBrush="Gainsboro">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Resources\Images\Logos\sap.png" Width="40" Margin="20,0,0,0"/>
                                <TextBlock Text="SAP" FontSize="20" Margin="20,0,0,0" VerticalAlignment="Center"></TextBlock>
                                <TextBlock Text=" Rated 4/5" FontSize="20" Margin="300,0,0,10"></TextBlock>
                            </StackPanel>

                            <TextBlock Text="20k reviews" FontSize="15" Margin="20,0,0,0"></TextBlock>
                            <TextBlock Text="94% recommended" FontSize="15" Margin="20,0,0,10">

                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>-->
                <StackPanel Orientation="Vertical" Grid.Row="1" Margin="100,0,0,0" x:Name="Stp_All_Companies">
                    <ItemsControl Name="Itc_reviews">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,10,0,10">
                                    <Border Width="550" Height="Auto" BorderThickness="2" BorderBrush="Black" HorizontalAlignment="Left">
                                        <StackPanel Orientation="Vertical">
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="{Binding logoPath}" Width="40" Margin="20,0,0,0"/>
                                                <TextBlock Text="{Binding name}" FontSize="20" Margin="30,0,0,0" VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
                                                <TextBlock Text="{Binding avgRating, StringFormat='Rating {0}'}" FontSize="20" Margin="300,0,0,10"></TextBlock>
                                            </StackPanel>

                                            <TextBlock Text="{Binding noOfReviews, StringFormat='{}{0} reviews'}" FontSize="15" Margin="20,0,0,0"></TextBlock>
                                            <TextBlock Text="{Binding wouldRecommended, StringFormat='{}{0}% Would recommend to a friend'}" FontSize="15" Margin="20,0,0,10">

                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>

            <!-- All Companies Code Ends-->

    </Grid>
    </Grid> 
</UserControl>
